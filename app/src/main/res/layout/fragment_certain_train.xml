<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="70dp"
    tools:context=".presentation.certaintrain.CertainTrainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/graphik_bold"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.001"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/graphik_super"
                android:text="@string/location"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_title_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_difficulty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/graphik_super"
                android:text="@string/difficulty"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toEndOf="@+id/certain_train_location_title"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_title_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_duration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/graphik_super"
                android:text="@string/duration"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.209"
                app:layout_constraintStart_toEndOf="@+id/certain_train_difficulty_title"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_title_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_calories_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/graphik_super"
                android:text="@string/calories"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.451"
                app:layout_constraintStart_toEndOf="@+id/certain_train_duration_title"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_title_text_view" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_location_text_view"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="@font/graphik_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_location_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_rating_text_view"
                android:layout_width="48dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/certain_progress_circular"
                app:layout_constraintEnd_toEndOf="@+id/certain_progress_circular"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/certain_progress_circular"
                app:layout_constraintTop_toTopOf="@+id/certain_progress_circular"
                app:layout_constraintVertical_bias="1.0" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/certain_progress_circular"
                android:layout_width="46dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:progress="100"
                app:indicatorColor="@color/green"
                app:indicatorSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.28"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_difficulty_title"
                app:trackColor="@color/grey_line"
                app:trackCornerRadius="4dp"
                app:trackThickness="4dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_duration_text_view"
                android:layout_width="120dp"
                android:layout_height="19dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/graphik_regular"
                android:textAlignment="center"
                android:textSize="12sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.257"
                app:layout_constraintStart_toEndOf="@+id/certain_progress_circular"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_duration_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_calories_text_view"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="12sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toEndOf="@+id/certain_train_duration_text_view"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_calories_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/description"
                android:fontFamily="@font/graphik_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_location_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/certain_train_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/graphik_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.012"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_description_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/train_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/train_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/certain_train_description_text_view"
                android:fontFamily="@font/graphik_bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/train_list_title"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>