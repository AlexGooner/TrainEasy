<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_margin="20dp"
    android:backgroundTint="@color/light_grey"
    app:cardCornerRadius="40dp"
    android:layout_gravity="center">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/train_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="87dp"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:text="@string/train_title"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_list_title_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/difficulty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="36dp"
        android:text="@string/difficulty"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toEndOf="@+id/list_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/train_list_title_text_view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/difficulty_first_btn"
        android:layout_width="6dp"
        android:layout_height="20dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="86dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        app:cornerRadius="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/difficulty_second_btn"
        android:layout_width="6dp"
        android:layout_height="28dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="78dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        app:cornerRadius="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/difficulty_third_btn"
        android:layout_width="6dp"
        android:layout_height="36dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        app:cornerRadius="0dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/train_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

</androidx.cardview.widget.CardView>